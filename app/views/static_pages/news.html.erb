<% provide(:title, 'News')%>

<% if signed_in? %>
  <div class="row">
    <div class="span1">
     </div>
      <div class="span3 offset1 side-menu">
      <section class="top-left">
        <%= render 'shared/user_info' %>
      </section>
      <section>
       
        <%= render 'shared/user_menu' %>
      </section>


<section>
       <div style="width:70%;padding-left:20px;">
<%= form_for(@search, :url=> {:controller=>'static_pages', :action=>'news'}) do |f| %>
  
  <div class="field">
    <%= f.label :country_contains, "Country" %>
   <%=f.country_select :country_contains, prompt: "Select country"%>
  </div>

  <div class="field">
    <%= f.label :city_contains, "City" %>
    <%= f.text_field :city_contains, prompt: "Enter city" %>
  </div>

  <div class="field">
    <%= f.label :title_contains, "Keyword" %>
    <%= f.text_field :title_or_tag_taggings_tag_name_contains, prompt: "Keywords (ex. sport, cinema)" %> 
  </div>
  
  <div class="field">
<%= f.label :cathegory_contains, "Cathegory" %>
      <%= f.collection_select :cathegory_contains, Post::CATHEGORIES, :to_s, :to_s, :include_blank => true, prompt: "Select category" %>
 </div>
  <p>
    <%#= f.label :category_id_equals, "Category" %><br />
    <%#= f.collection_select :category_id_equals, Category.all, :id, :name, :include_blank => true %>
  </p>
  <p>
    <%#= f.label :price_gte, "Price Range" %>
    <%#= f.text_field :price_gte, :size => 8 %>  <%#= f.text_field :price_lte, :size => 8 %>
  </p>
  <p>
     <%= f.submit "Search", class: "btn btn-large btn-primary" %>
  </p>
<% end %>
</div>
    </section>
       
      </div>

    <div class="span7 feed_of_posts">
      


      <h2>New meetings</h2>

      <% if @feed_items.empty? %>
        Opps...nothing matches your search criteria. Please try again!
      <% end %>
      <%= render 'posts/feed' %>
    </div>

     <div class="span2">
     </div>
  </div>

<% else %>
            
 <div class="center hero-unit">
  <h1>Welcome to Freetimeler!</h1>

  

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
 </div>


<% end %> 