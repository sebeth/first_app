<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
       <%= render 'shared/user_menu' %>
    </section>
  </aside>
  <div class="span7"> 
<%# Add here possibility to send message %>
<h1>
  <%= @user.name %>
</h1>
<img>
  <%= image_tag @user.photo.url(:profile) %>
</img>

<% if !@user.age.nil? %>
<p>
  Age: <%=@user.age %>
</p>
<%end %>

<% if !@user.country.empty? %>
<p>
  Country: 
  <%=@country.name %>
</p>
<%end %>

<% if !@user.city.empty? %>
<p>
  City: <%=@user.city %>
</p>
<%end %>

<% if !@user.intersts.empty? %>
<p>
  Interests: <%=strip_tags(@user.intersts) %>
</p>
<%end %>

<% if !@user.description.empty? %>
<p>
  About: <%=strip_tags(@user.description) %>
</p>
<%end %>

